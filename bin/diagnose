import os
import sys


DIR_PATH = os.path.abspath(os.path.join(os.path.dirname(__file__), '..'))
sys.path.insert(1, DIR_PATH)

from diagnostics.menu import show_main_menu


def main():
    while True:
        show_main_menu()


if __name__ == '__main__':
    main()
